{
    "name": "dcmtk",
    "version": "0.0.1",
    "description": "Type-safe Node.js wrapper for DCMTK (DICOM Toolkit) command-line utilities",
    "author": "mhobb",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=20"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "build:watch": "tsup --watch",
        "test": "vitest run",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "lint": "eslint --max-warnings 0 .",
        "lint:fix": "eslint --fix --max-warnings 0 .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist coverage",
        "prepare": "husky",
        "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run lint:fix && pnpm run test:coverage",
        "preversion": "pnpm run lint && pnpm run test",
        "postversion": "git push && git push --tags",
        "version:major": "pnpm version major",
        "version:minor": "pnpm version minor",
        "version:patch": "pnpm version patch",
        "dry-run": "npm pack --dry-run",
        "generate": "tsx scripts/generateDictionary.ts"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix --max-warnings 0 --no-warn-ignored",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "@types/node": "^22.12.0",
        "@vitest/coverage-v8": "^3.0.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.0",
        "eslint-plugin-prettier": "^5.2.0",
        "globals": "^15.14.0",
        "husky": "^9.1.0",
        "lint-staged": "^15.4.0",
        "prettier": "^3.4.0",
        "rimraf": "^6.0.0",
        "tsup": "^8.3.0",
        "tsx": "^4.21.0",
        "typescript": "^5.8.0",
        "typescript-eslint": "^8.21.0",
        "vitest": "^3.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    },
    "dependencies": {
        "fast-xml-parser": "^5.3.5",
        "tree-kill": "^1.2.2",
        "zod": "^4.3.6"
    }
}
